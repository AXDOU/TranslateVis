
@model TranslateVis.DTO.RegisterViewModel
@{
    ViewBag.Title = "注册用户";
}
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/Scripts/jquery.unobtrusive-ajax.js"></script>
<link href="~/lib/layui/css/layui.css" rel="stylesheet" />
<style>
    .login {
        margin: 250px auto;
        width: 600px;
        height: 450px;
    }
</style>
<div class="container login">
    <h2>登录</h2>
    <form asp-action="Signup" class="layui-form" data-ajax="true" data-ajax-method="POST" 　data-ajax-success="onsuccess">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="layui-form-item">
            <label asp-for="Username">用 户 名</label>
            <input asp-for="Username" class="layui-input" />
            <span asp-validation-for="Username"></span>
        </div>
        <div class="layui-form-item">
            <label asp-for="Password">密 &nbsp;&nbsp;&nbsp;&nbsp;码</label>
            <input asp-for="Password" class="layui-input" />
            <span asp-validation-for="Password"></span>
        </div>
        <div class="layui-form-item">
            <label asp-for="ConfirmPassword">确认密码</label>
            <input asp-for="ConfirmPassword" class="layui-input" />
            <span asp-validation-for="ConfirmPassword"></span>
        </div>
        <div class="layui-form-item">
            <input type="submit" value="注册" class="layui-btn layui-btn-warm" />
        </div>
    </form>
</div>
<script>
    var onsuccess = function onSuccess(data) {
        if (data.code == 200) {
            alert(data.msg);
            location.href = parent.location.reload();
        }
        else {
            alert(data.msg);
        }
    }
</script>


