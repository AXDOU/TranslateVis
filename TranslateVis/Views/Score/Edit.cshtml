@model TranslateVis.DTO.AttemdanceDetailOutput
@{
    ViewBag.Title = "编辑";
    Layout = null;
}
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/Scripts/jquery.unobtrusive-ajax.js"></script>
<style>
    .col {
        display: flex;
    }

    .col-sm-3 {
        font-weight: 400;
        width: 180px;
        text-align: right;
        padding:5px;
    }

    .btn2 {
        margin-left: 45%;
        width: 80px;
    }

</style>
<form asp-controller="Score" asp-action="Edit" data-ajax="true" data-ajax-method="POST" 　data-ajax-success="onsuccess">
    @Html.Hidden("id", "Id", Model.Id)
    @Html.Hidden("UserId", "UserId", Model.UserId)
    <div class="col">
        <div class="col-sm-3">
            @Html.Label("日期")
        </div>
        <div class="col-sm-9">
            @Html.DisplayFor(model => model.AttendanceDate, "日期")
            @Html.HiddenFor(model => model.AttendanceDate, "日期")
        </div>
    </div>
    <div class="col">
        <div class="col-sm-3">
            @Html.Label("名称")
        </div>
        <div class="col-sm-9">
            @Html.DisplayFor(model => model.LinkMan, "名称")
        </div>
    </div>
    @*<div class="col">
            @Html.Label("分值")
            @Html.DisplayFor(model => model.Score, "Score")
        </div>*@
    <div class="col">
        <div class="col-sm-3">
            @Html.Label("纪律分（1）")
        </div>
        <div class="col-sm-9">
            @Html.EditorFor(model => model.AScore, "AScore")
        </div>
    </div>
    <div class="col">
        <div class="col-sm-3">
            @Html.Label("日志及进度（1）")
        </div>
        <div class="col-sm-9">
            @Html.EditorFor(model => model.BScore, "BScore")
        </div>
    </div>
    <div class="col">
        <div class="col-sm-3">
            @Html.Label("工作态度（3）")
        </div>
        <div class="col-sm-9">
            @Html.EditorFor(model => model.CScore, "CScore")
        </div>
    </div>
    <div class="col">
        <div class="col-sm-3">
            @Html.Label("工作任务（5）")
        </div>
        <div class="col-sm-9">
            @Html.EditorFor(model => model.DScore, "DScore")
        </div>
    </div>
    <div class="col">
        <div class="col-sm-3">
            @Html.Label("描述")
        </div>
        <div class="col-sm-9">
            @Html.EditorFor(model => model.Remark, "Remark")
        </div>
    </div>
    <div class="col align-bottom">
        <input type="submit" class="btn-info btn2" value="提交" />
    </div>
</form>
<script>
    var onsuccess = function onSuccess(data) {
        if (data.code == 200) {
            alert(data.msg);
            location.href = parent.location.reload();
        }
        else
        {
            alert(data.msg);
        }
    }
</script>

